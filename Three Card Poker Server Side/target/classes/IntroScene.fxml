<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="IntroController" spacing="15" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Welcome to 3 Card Poker Server!" style="-fx-font-size:18; -fx-font-weight:bold;"/>
    <Label text="Enter Port Number:"/>
    <TextField fx:id="portField" promptText="e.g., 5555"/>
    <Button text="Start Server" onAction="#startServer"/>
</VBox>
