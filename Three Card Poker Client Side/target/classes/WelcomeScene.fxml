<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="WelcomeController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Welcome to 3 Card Poker!" style="-fx-font-size:18; -fx-font-weight:bold;"/>
    <Label text="Server IP:"/>
    <TextField fx:id="ipField"/>
    <Label text="Port:"/>
    <TextField fx:id="portField"/>
    <Button fx:id="connectButton" text="Connect" onAction="#connectToServer"/>
</VBox>
